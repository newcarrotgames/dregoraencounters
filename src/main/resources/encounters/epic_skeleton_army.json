      "ref": "skeleton_std", 
      "at": { 
        "mode": "nearPlayer", 
        "radius": { "min": 10, "max": 15 }, 
        "yMode": "surface" 
      } 
    },
    { 
      "label": "cavalry_2", 
      "ref": "skeleton_std", 
      "at": { 
        "mode": "nearPlayer", 
        "radius": { "min": 10, "max": 15 }, 
        "yMode": "surface" 
      } 
    },
    { 
      "label": "archer_1", 
      "ref": "skeleton_std", 
      "at": { 
        "mode": "nearPlayer", 
        "radius": { "min": 6, "max": 10 }, 
        "yMode": "surface" 
      } 
    },
    { 
      "label": "archer_2", 
      "ref": "skeleton_std", 
      "at": { 
        "mode": "nearPlayer", 
        "radius": { "min": 6, "max": 10 }, 
        "yMode": "surface" 
      } 
    },
    { 
      "label": "warrior_1", 
      "ref": "skeleton_std", 
      "at": { 
        "mode": "nearPlayer", 
        "radius": { "min": 6, "max": 10 }, 
        "yMode": "surface" 
      } 
    },
    { 
      "label": "warrior_2", 
      "ref": "skeleton_std", 
      "at": { 
        "mode": "nearPlayer", 
        "radius": { "min": 6, "max": 10 }, 
        "yMode": "surface" 
      } 
    }
